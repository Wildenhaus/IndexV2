<UserControl x:Class="Index.Modules.MeshEditor.Controls.MeshTypeIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Index.Modules.MeshEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="Transparent"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Padding="0"
            Margin="3,0,0,0"
            Height="12"
            BorderBrush="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MeshTypeIndicator}}, Path=Color}"
            BorderThickness="1"
            CornerRadius="1">
        <TextBlock Padding="2" 
                   Margin="0"
                   FontSize="10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MeshTypeIndicator}}, Path=Color}"
                   Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MeshTypeIndicator}}, Path=Text}" />
    </Border>
</UserControl>
